{% extends "base.html.twig" %}
{% block body %}
	<div class="right">
		<div class="right__content">
			<div class="right__title">Dashboard</div>
			<p class="right__desc">Add podcast</p>
			<div class="right__formWrapper">
				<div class="containdiv">
					<div class="div">
						{{ form_start(podcastForm) }}
						<div class="right__inputWrapper">
							<label for="title">Title</label>
							{{ form_widget(podcastForm.title,{
                                        'attr':{
                                        'placeholder': 'Title'
                                                }
                                 }) }}
						</div>
						<div class="right__inputWrapper">
							<label for="image">Image</label>
							{{ form_widget(podcastForm.image,{
                                 }) }}
						</div>
						<div class="right__inputWrapper">
							<label for="image">Audio</label>
							{{ form_widget(podcastForm.audio,{
								
                            }) }}
						</div>

						<div class="right__inputWrapper">
							<label for="desc">Content</label>
							{{ form_widget(podcastForm.content,{
                                        'attr':{
                                        'placeholder': 'Write something...'
										  }
                                 }) }}
						</div>
					</div>

					<div class="div">
						<div class="right__inputWrapper">
							<label for="p_category">Category</label>
							{{ form_widget(podcastForm.category,{
                                 }) }}
						</div>
						<div class="right__inputWrapper" id="podcast2">
							<label for="course">Course</label>
							{{ form_widget(podcastForm.course,{
                                 }) }}
						</div>
					</div>
					<button class="btn" onclick="submit_podcast()" type="submit">ADD PODCAST</button>

					{{ form_end(podcastForm) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
