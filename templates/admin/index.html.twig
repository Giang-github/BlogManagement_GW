{% extends 'base.html.twig' %}
{% block title %}Hello Admin
{% endblock %}
{% block body %}
	<div class="right">
		<div class="right__content">
			<div class="right__title">Dashboard</div>
			<p class="right__desc">Dashboard</p>
			<div class="right__cards">
				<a class="right__card" style="text-decoration: none" href="{{path('view_user')}}">
					<div class="right__cardTitle">User</div>
					<div class="right__cardNumber">05</div>
					<div class="right__cardDesc">View All
						<img src="assets/arrow-right.svg" alt="">
					</div>
				</a>
				<a class="right__card" style="text-decoration: none" href="{{path('view_post')}}">
					<div class="right__cardTitle">All blogs</div>
					<div class="right__cardNumber">10</div>
					<div class="right__cardDesc">View All
						<img src="assets/arrow-right.svg" alt="">
					</div>
				</a>
				<a class="right__card" style="text-decoration: none" href="{{path('view_podcast')}}">
					<div class="right__cardTitle">All podcast</div>
					<div class="right__cardNumber">09</div>
					<div class="right__cardDesc">View All
						<img src="assets/arrow-right.svg" alt="">
					</div>
				</a>
				<a class="right__card" style="text-decoration: none" href="{{path('view_course')}}">
					<div class="right__cardTitle">All courses</div>
					<div class="right__cardNumber">08</div>
					<div class="right__cardDesc">View All
						<img src="assets/arrow-right.svg" alt="">
					</div>
				</a>
			</div>
			<div class="right__table">
				<div class="right__tableWrapper">
					<table>
						<thead>
							<tr>
								<th>STT</th>
								<th>Email</th>
								<th>Full Name</th>
								<th>Image</th>
								<th>Phone</th>
								<th>Birthday</th>
								<th>Gender</th>
								<th colspan="2">Actions</th>
							</tr>
						</thead>


						<tbody class="tag">
							{% for user in users %}
								<tr>
									<th>{{user.id}}</th>
									<th>{{user.email}}</th>
									<th>{{user.fullname}}</th>
									<th><img src="{{('/IMG/Users/')~user.image}}" alt="" width="80px" , height"80px"></th>
									<th>{{user.phone}}</th>
									<th>{{user.dob | date('m/d/Y')}}</th>
									<th>{{user.gender}}</th>
									<th>
										<a href="#"><img class=" ___icon" src="assets/pen-to-square-solid.svg" alt=""></a>
									</th>
									<th>
										<a href="{{ path ('user_delete', {'id': user.id})}}"><img class="___icon" src="assets/trash-can-solid.svg" alt=""></a>
									</th>
								</tr>
							{% endfor %}
						</tbody>

					</table>
				</div>

			</div>
		</div>
	</div>
{% endblock %}
