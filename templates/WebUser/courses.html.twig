{% extends 'baseweb.html.twig' %}

{% block body %}
	<div class="container">
		<div class="course">
			<div class="list_courses">
				{% for course in courses %}

					<div class="item__course">
						<a class="course__img" href="{{path('course_detail', {'id': course.id})}}">
							<img src="{{asset('IMG/Courses/'~course.image)}}" alt="">
						</a>
						<div class="course__title">
							<a href="{{path('course_detail', {'id': course.id})}}">
							{# <a href="{{path ('Course_detail'), {'id': course.id}}}"></a> #}
								<h3>{{course.title}}</h3>								
								<p>
									3.119 Người tham dự
								</p>
							</a>
						</div>
						<div class="line"></div>
						<div class="course_member">
							Blog Member
						</div>
						<div class="course__btn">
							<button>Tham gia</button>
						</div>
					</div>
				{% endfor %}
			</div>

		</div>
	</div>
</body>
<script src="../JS/course.js"></script>{% endblock %}{% block footer1 %}{% endblock %}
