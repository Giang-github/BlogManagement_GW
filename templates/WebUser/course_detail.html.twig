{% extends 'baseweb.html.twig' %}
{% block body %}
	<div class="container">
		<div class="blog__mainTitle">
			<p>
				{{ course.title }}
				<div class="line__mainTitle">
					<span></span>
				</div>
			</p>
		</div>
		<div class="blog__itemTitle">
			{% for podcast in course.podcasts %}
				<div class="item__post">
					<a class="item__img" href="{{path ('podcast_detail', {'id': podcast.id})}}">
						<img src="{{asset('IMG/Podcast/'~podcast.image)}}">
						<span></a>
						<div style="display: flex;">

							<div class="item__info">
								<div class="info__avablog">
									<img src="{{asset('IMG/Podcast/'~podcast.image)}}" alt="">
								</div>
								<div class="info__text">
									<h5>Dang Thu Huyen</h5>
									<p class="realtimebl">4 giờ trước</p>
								</div>
								<div style="position: relative; top: -6px; left: 5px; font-size: 10px; cursor: pointer;">
									<i class="fas fa-crown" title="Quản trị viên"></i>
								</div>
							</div>

						</div>
						<div class="item__title">
							<a href="{{path ('podcast_detail', {'id': podcast.id})}}" style="color: black; text-decoration: none;">
								<h3>{{podcast.title}}</h3>
								<p>{{podcast.content}}</p>
							</a>
						</a>
					</div>
					<div style="border-bottom: 1px solid#ccc; width: 250px; margin: auto;"></div>
					<div class="item__icon">
						<div>
							<i class="far fa-eye">
								999</i>
							<i class="far fa-comment-alt" style="position: relative; left: -20px;">
								10</i>
						</div>
						<i class="far fa-heart">
							99</i>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
</body>

<script src="../../JS/course_detail.js"></script>{% endblock %}{# {% block footer1 %}{% endblock %} #}{% block footer2 %}{% endblock %}
