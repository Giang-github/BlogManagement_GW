{% extends 'baselogin.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="danhnhap">
		<div class="login">
			<div class="login__title">
				<div class="title_text">
					<h2>Đăng nhập tài khoản</h2>
                    <br>
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}
					{% if app.user %}
						You are logged in as
						{{ app.user.userIdentifier }},
						<a href="{{ path('app_logout') }}">Logout</a>
					{% endif %}
				</div>
				<div class="btn_close">
					<a href="{{path ('homepage')}}">
						<i class="far fa-times-circle"></i>
					</a>
				</div>
			</div>
			<div class="login__ava">
				<img src="../../IMG/dangthuhuyen_blog.jpg" alt="">
			</div>
			<!--Form-->
			<form method="post" class="form__input" name="myForm" id="myForm">
				<div>
					<div class="login__input">
						<div class="input_account">
							<input type="text" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" required autofocus>
						</div>

						<div class="input_password">
							<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
						</div>
					</div>
					<div class="forget__password">
						 <a href="{{ path('app_forgot_password_request') }}">Quên mật khẩu</a> 
					</div>
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
							{# <div><label for="">Remember me</label><input text-align="left" style="widgh: 15px;height: 15px; margin: left 0;text-align:left" type="checkbox" name="_remember_me"></div> #}
					<div class="btn__login">
            <input type="submit" value="Đăng nhập" onclick="submitInfor();"></input>
          </div>
				</form>
				<div class="login__else">
					<div class="else">
						<span>Hoặc</span>
					</div>
				</div>
				<div class="login__btnelse">
					<div>
						<div class="btn_google">
							<button>
								<img src="../../IMG/google_login.png" alt="">
								<div>
									Đăng nhập bằng Google</div>
							</button>
						</div>
						<div class="btn_facebook">
							<button>
								<img src="../../IMG/facebook_login.png" alt="">
								<div>Đăng nhập bằng Facebook</div>
							</button>
						</div>
						<div class="btn_apple">
							<button>
								<img src="../../IMG/apple_login.png" alt="">
								<div>Đăng nhập bằng AppleID</div>
							</button>
						</div>
					</div>
				</div>
				<div class="sign__in">
					<p>Chưa có tài khoản?</p>
					<span>
						<a href="{{path ('app_register')}}">&nbspĐăng ký</a>
					</span>
				</div>
			</div>
		</div>
	{% endblock %}
